<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/locadora?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">senha</property>
    <mapping class="model.categoria.Categorias"/>
    <mapping class="model.cliente.Clientes"/>
    <mapping class="model.endereco.Enderecos"/>
    <mapping class="model.locacao.Locacoes"/>
    <mapping class="model.midia.Midias"/>
    <mapping class="model.filme.Filmes"/>
  </session-factory>
</hibernate-configuration>
